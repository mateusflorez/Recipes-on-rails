<%= form_for([@recipe, @comment]) do |f| %>
<%= render 'layouts/error', object: @comment %>

<p class="form-group">
    <%= f.label :Name %><br>
    <%= f.text_field :name, autofocus: true, class:'form-control' %>
</p>
<p class="form-group">
    <%= f.label :Stars %><br>
    <%= f.select :rating, Comment::RATING, prompt:'Choose how many stars', class: 'form-control' %>
</p>
<p class="form-group">
    <%= f.label :Comment %><br>
    <%= f.text_area :comment, placeholder:'Write your comment ...', class: 'form-control' %>
</p>
<p class="form-group">
<%= f.submit class:'btn btn-primary' %>
<%= link_to "Cancel", :back, class:'btn btn-danger' %>
</p>

<% end %>
