<%= form_for(@recipe) do |f| %>

<p>
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
</p>
<p>
    <%= f.label :Ingredients %><br>
    <%= f.text_area :stuff, cols:20, rows:5 %>
</p>
<p>
    <%= f.label :Recipe_type %><br>
    <%= f.text_field :kind %>
</p>
<p>
    <%= f.label :Calories %><br>
    <%= f.number_field :calories %>
</p>
<p>
    <%= f.label :Directions %><br>
    <%= f.text_area :directions, cols:20, rows:5 %>
</p>
<p>
    <%= f.label :Preparation_time %><br>
    <%= f.time_select :preptime %>
</p>
<p>
    <%= f.label :Serving %><br>
    <%= f.text_field :portion %>
</p>
<p>
    <%= f.label :Cost %><br>
    <%= f.number_field :cost, step: :any %>
</p>
<p>
    <%= f.label :Image %><br>
    <%= f.text_field :poster, placeholder: ".GIF, .JPEG or .PNG" %>
</p>
<p>
    <%= f.submit %>
    <%= link_to "back", :back %>
</p>

<% end %>
